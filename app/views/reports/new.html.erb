<h1 class="white">Report Link</h1>

<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="comments-list">
	<a href="<%= @link.url %>" target="_blank"><h5><%= @link.title %></h5></a>
	<p class="mt-10"><%= @link.description %></p>
	<p class="mt-10">Date Published: <%= @link.created_at.to_formatted_s(:long_ordinal) %></p><br>
	<p>		
		<%= f.label 'Enter the reason for reporting link:' %><br>			
	   <%= f.text_area :reason %>
     <%= f.hidden_field :link_id, :value => params[:id] %>
	</p>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>

  </div>
<% end %>