<p id="notice"><%= notice %></p>
 
<h1>Listing Reports</h1>

<table>
  <thead>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
        <tr>
            <% if current_account.level == 1 %>
            <td><%= report.reason %></td>
            <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
<br>
