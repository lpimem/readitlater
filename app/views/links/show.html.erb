<p id="notice"><%= notice %></p>

      <div class="well well-sm">
      	<a href="<%= @link.url %>"><h5><%= @link.title %></h5></a>
        <div class="tags">
          <% @link.tags.each do |tag| %>
            <div class="tag">
              <%= tag.label %>
            </div>
          <% end %>
      </br>
        </div>
    	<p class="mt-10"><%= @link.description %></p>
    	<p class="mt-10">Date Published: <%= @link.created_at.to_formatted_s(:long_ordinal) %></p>
      </div>

      	
      	<div class="panel panel-default">
      		<% @link.comments.each do |comment| %>
            <div class="panel-heading">
    			<h3 class="panel-title">said by <%= comment.account_id %> at <%= comment.created_at %></h3>
  			</div>
  			<div class="panel-body">
    			<%= comment.comment %>
  			</div>
  			<% end %>
		</div>
		
		<%= button_to 'Add Comment', new_comment_path, :class => "btn-group btn-group-xs" %>