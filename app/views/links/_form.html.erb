<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= label_tag(:level, "Publish To:") %><br>
    <%= f.select :level, [['Public',1],['Only Followers',2],['Only me',3]] %>
  </div>
  <div class="field">
    <%= label_tag(:tags_text, "Tags:") %><br>
    <%= f.text_field :tags_text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
